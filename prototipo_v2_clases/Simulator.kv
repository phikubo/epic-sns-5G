#WindowManager:
<ModelcanalUMI>
	name: "sking"

	BoxLayout:
		orientation: 'vertical'
		padding: 50
		canvas:
			Color:
				rgba: (1, 1, 1, 1)
			Rectangle:
				pos:self.pos
				size:self.size



#TITULO UMA PARA LA INTERFAZ GRAFICA 
		Label:
			canvas.before:
				Color:
				
					rgba: 0.5,0.5,0.3,1
				Rectangle:
					pos:self.pos
					size:self.size
					source: "modelcanal.PNG"

			text: "URBANO CALLEJON ESTRECHO (STREET CANYON)"
			font_size: 20


		BoxLayout:			
			#id: Vsector
			orientation: 'horizontal'	
			size_hint_y: 0.18		
			Label:
				canvas.before:
					Color:
						rgba: 0.5,0.5,0.4,1
					Rectangle:
						pos:self.pos
						size:self.size
				text: "Distancia Intercelda (ISD) 200m"
			TextInput:
				id: ISD
				size_hint: ( .15, 1)
				multiline: False

		BoxLayout:
			orientation:'horizontal'
			size_hint_y: 0.18
			Label:
				canvas.before:
					Color:
						rgba: 0.5,0.5,0.4,1
					Rectangle:
						pos:self.pos
						size:self.size
				text: "Alto de la antena (HBs) 10m"
			TextInput:
				id: Hbs
				size_hint: ( .15, 1)
				multiline: False

		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: 0.18

			Label:
				canvas.before:
					Color:
						rgba: 0.5,0.5,0.4,1
					Rectangle:
						pos:self.pos
						size:self.size
				text: "Distancia min BS-UE 10m"	
			TextInput:
				id: Dbs_ue
				size_hint: ( .15, 1)
				multiline: False

		BoxLayout:
			orientation:'horizontal'
			size_hint_y: 0.18
			Label:
				canvas.before:
					Color:
						rgba: 0.5,0.5,0.4,1
					Rectangle:
						pos:self.pos
						size:self.size
				text: "Altura Usuario (Hue) 2-3m"
			TextInput:
				id: Hue
				size_hint: ( .15, 1)
				multiline: False
				
		BoxLayout:
			orientation: 'horizontal'
			padding: [0, 30]
			Button:
				canvas.before:
					Color:
						rgba: 0,0,1
					Rectangle:
						pos:self.pos
						size:self.size
				background_color: 1, 1, 1, 1
				text: "calcular"

				on_release: 
					root.manager.transition.direction = "up" 		
					app.root.current ="poche"

			Button:
				canvas.before:
					Color:
						rgba: 0,0,1
					Rectangle:
						pos:self.pos
						size:self.size
				background_color: 1, 1, 1
				text: "volver"

				on_release: 
					root.manager.transition.direction = "down" 		
					app.root.current ="caz"
	


