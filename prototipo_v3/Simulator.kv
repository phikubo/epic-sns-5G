						size:self.size
				background_color: 1, 1, 1
				text: "calcular"

				on_release: 
					root.manager.transition.direction = "down" 		
					app.root.current ="poche"

<MainWindow>
	name:"poche"
	nivel: nivel
	radiocell: radiocell
	intensidadPPP: intensidadPPP	


	
	size: (.3, .1)

	BoxLayout:
		#orientation: 'vertical'
		padding: 20
		size: self.size
		#size: (.3 , .5) 
		#size: (.4, .3)
		canvas:
			Color:
				rgba: (1, 1, 1, 1)
