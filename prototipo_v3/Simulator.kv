				BoxLayout:
					padding: 10
					orientation: 'vertical'

					BoxLayout:
						orientation: 'horizontal'
						size_hint_y: 0.15
						Label:
							canvas.before:
								Color:
									rgba: 0.3,0.4,0.5,1
								Rectangle:
									pos:self.pos
									size:self.size
							text: "Nivel"
						TextInput:
							id: nivel
							size_hint: ( .20, 1)
